<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
	<key>items</key>
	<array>
		<dict>
			<key>cell</key>
			<string>PSGroupCell</string> <!-- dumb fix for bug causing switches to be too high -->
		</dict>
		<dict>
			<key>cell</key>
			<string>PSGroupCell</string>
			<key>label</key>
			<string>Button Color</string>
			<key>footerText</key>
			<string>This sets the color of the Quick-Add &amp; heart button when highlighted. Using a custom color disables ColorFlow4 support.</string>
		</dict>
		<dict>
			<key>cell</key>
			<string>PSSwitchCell</string>
			<key>default</key>
			<false/>
			<key>defaults</key>
			<string>com.lacertosusrepo.improvifyprefs</string>
			<key>key</key>
			<string>addToPlaylistCustomColor</string>
			<key>label</key>
			<string>Use Custom Selected Color</string>
			<key>PostNotification</key>
			<string>com.lacertosusrepo.improvifyprefs/preferences.changed</string>
		</dict>
		<dict>
			<key>cell</key>
			<string>PSLinkCell</string>
			<key>cellClass</key>
			<string>PFSimpleLiteColorCell</string>
			<key>libcolorpicker</key>
			<dict>
				<key>defaults</key>
				<string>com.lacertosusrepo.improvifyprefs</string>
				<key>key</key>
				<string>addToPlayistSelectedColor</string>
				<key>fallback</key>
				<string>#1DB954</string>
				<key>PostNotification</key>
				<string>com.lacertosusrepo.improvifyprefs/preferences.changed</string>
				<key>alpha</key>
				<false/>
			</dict>
			<key>label</key>
			<string>Button Selected Color</string>
		</dict>

		<dict>
			<key>cell</key>
			<string>PSGroupCell</string>
			<key>label</key>
			<string>Button Offset</string>
			<key>footerText</key>
			<string>Use the slider to set the offset for the button, default is -6.</string>
		</dict>
		<dict>
			<key>cell</key>
			<string>PSSliderCell</string>
			<key>default</key>
			<string>-6</string>
			<key>defaults</key>
			<string>com.lacertosusrepo.improvifyprefs</string>
			<key>label</key>
			<string>Button Offset</string>
			<key>min</key>
			<string>-10</string>
			<key>max</key>
			<string>10</string>
			<key>isSegmented</key>
			<true/>
			<key>segementCounter</key>
			<string>20</string>
			<key>showValue</key>
			<true/>
			<key>leftImage</key>
			<string>offseticon.png</string>
			<key>key</key>
			<string>addToPlayistButtonOffset</string>
			<key>PostNotification</key>
			<string>com.lacertosusrepo.improvifyprefs/preferences.changed</string>
		</dict>
	</array>
	<key>title</key>
	<string>Quick-Add Settings</string>
</dict>
</plist>
